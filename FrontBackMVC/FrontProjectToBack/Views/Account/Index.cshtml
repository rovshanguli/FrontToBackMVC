<main>
    <div class="container">
        <div class="row myform">
            <div class="col-5 m-5 login">
                <div class="login">
                    <h2>Login</h2>
                </div>
                <div class="formsix-pos">
                    <label for="username">Username or email address&nbsp;<span class="required">*</span></label>
                    <div class="form-group i-email">
                        <input type="email" class="form-control mt-2" required=""
                               id="email2" placeholder="Email Address *">
                    </div>
                </div>
                <div class="formsix-e">
                    <label for="password">Password&nbsp;<span class="required ">*</span></label>
                    <div class="form-group i-password mt-2">
                        <input type="password" class="form-control" required=""
                               id="password2" placeholder="Password *">
                    </div>
                </div>
                <div class="login_remember_box">
                    <label class="control control--checkbox">
                        Remember me
                        <input type="checkbox"> <span class="control__indicator"></span>
                    </label> <a href="#"
                                class="forget_password"> Forgot Password </a>
                </div>
                <div class="login_btn_wrapper button">
                    <a href="#" class="btn btn-primary login_btn"
                       style="background-color: navy;">
                        Login
                    </a>
                </div>



            </div>
            <div class="col-5 m-5 register">
                <div class="login">
                    <h2>Register</h2>
                </div>
                <div class="formsix-pos">
                    <label for="username">Email address&nbsp;<span class="required">*</span></label>
                    <div class="form-group i-email">
                        <input type="email" class="form-control mt-2" required=""
                               id="email2" placeholder="Email Address *">
                    </div>
                </div>
                <div class="formsix-e">
                    <label for="password">Password&nbsp;<span class="required ">*</span></label>
                    <div class="form-group i-password mt-2">
                        <input type="password" class="form-control" required=""
                               id="password2" placeholder="Password *">
                    </div>
                </div>
                <div class="login_remember_box">
                    <p>
                        Your personal data will be used to support your experience throughout this website, to manage
                        access to your account, and for other purposes described in our <a href="#">privacy policy</a>.
                    </p>
                </div>
                <div class="login_btn_wrapper button">
                    <a href="#" class="btn btn-primary login_btn"
                       style="background-color: navy;">
                        Register
                    </a>
                </div>



            </div>


        </div>

    </div>
</main>